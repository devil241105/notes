<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notes</title>
</head>
<body>
    <h1>Notes</h1>
    <form action="/notes" method="POST">
        <input type="text" name="title" placeholder="Title" required>
        <textarea name="content" placeholder="Content" required></textarea>
        <button type="submit">Add Note</button>
    </form>

    <ul>
        <% notes.forEach(note => { %>
            <li>
                <h2><%= note.title %></h2>
                <p><%= note.content %></p>
                <form action="/notes/<%= note.id %>?_method=PUT" method="POST">
                    <input type="hidden" name="_method" value="PUT">
                    <input type="text" name="title" placeholder="New Title" required>
                    <textarea name="content" placeholder="New Content" required></textarea>
                    <button type="submit">Update</button>
                </form>
                <form action="/notes/<%= note.id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }) %>
    </ul>
</body>
</html>
